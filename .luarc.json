{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "special": {
      "require": "require"
    }
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "${3rd}/busted/library"
    ],
    "checkThirdParty": false
  },
  "diagnostics": {
    "globals": ["vim", "describe", "it", "before_each", "after_each", "assert", "pending", "spy", "stub", "mock"],
    "disable": ["lowercase-global"]
  },
  "type": {
    "castNumberToInteger": true
  },
  "hint": {
    "enable": true,
    "setType": true
  },
  "format": {
    "enable": false
  }
}
